; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Первый СМС обмен с Кленовым

[logic]
active = sr_idle

[sr_idle]
on_info = {+father_after_deaf_start} sr_idle@time
single = true

[sr_idle@time]
on_timer = 10000 | sr_idle@time1 %=arhara_dialog.bazar_s_klenovum1%
single = true

[sr_idle@time1]
on_timer = 10000 | sr_idle@time2 %=arhara_dialog.bazar_s_klenovum2%
single = true

[sr_idle@time2]
on_timer = 8000 | sr_idle@time3 %=arhara_dialog.bazar_s_klenovum3%
single = true

[sr_idle@time3]
on_timer = 8000 | sr_idle@time4 %=arhara_dialog.bazar_s_klenovum4%
single = true

[sr_idle@time4]
on_timer = 8000 | sr_idle@time5 %=arhara_dialog.bazar_s_klenovum5%
single = true

[sr_idle@time5]
on_timer = 8000 | nil %=arhara_dialog.proba_posulki =arhara_dialog.bazar_s_klenovum6%
single = true

[sr_idle@nil]
