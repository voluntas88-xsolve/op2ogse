; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Рестриктор, управляющий СМС обменом с Пантерой.

[logic]
active = sr_idle

[sr_idle]
on_info = {+esc_pantera_stop_sms} sr_idle@time %=arhara_dialog.spawn_bomba_i_mina1%
single = true

[sr_idle@time]
on_timer = 6000 | sr_idle@time1 %=arhara_dialog.pantera_sms_stop1%
single = true

[sr_idle@time1]
on_timer = 2000 | sr_idle@time1_1 %=arhara_dialog.pantera_sms_stop2%
single = true

[sr_idle@time1_1]
on_timer = 2000 | sr_idle@time2 %=arhara_dialog.pantera_dinamit_nevid%
single = true

[sr_idle@time2]
on_timer = 2000 | nil %=arhara_dialog.sound_deaf_pantera%
single = true

[sr_idle@nil]
