; Воронин

[logic]
active = walker
combat_ignore = combat_ignore
on_death = death

[death]
on_info = %+sar2_death_43 +bar_voronin_dead%

[walker]
path_walk = bar_dolg_leader_walk
path_look = bar_dolg_leader_look
meet = meet
on_info = {+bar_territory_nodolg_2_hit} walker@enemy %=bar_arena_hit% , {+bar_territory_nodolg_kill} walker@enemy %=bar_arena_hit% , {+bar_territory_dolg_3_hit} walker@enemy %=bar_arena_hit%
combat_ignore_cond = {=dist_to_enemy_ge(10)}

[walker@enemy]
path_walk = bar_dolg_leader_walk
path_look = bar_dolg_leader_look
meet = meet

[meet]
meet_state = 6|ward
meet_state_wpn = 6|ward
;meet_state = 6| {+npc_greet} ward, ward@ {+npc_greet} talk_bye %-npc_greet% |5| {-npc_greet} ward, ward@ {-npc_greet} talk_hello %+npc_greet%
;meet_state_wpn = 6| {+npc_greet} ward, ward@ {+npc_greet} talk_bye %-npc_greet% |5| {-npc_greet} ward, ward@ {-npc_greet} talk_hello %+npc_greet%
victim = 6|actor
victim_wpn = 6|actor
use = true
use_wpn = true
meet_talk_enabled = true
precond = visibility
