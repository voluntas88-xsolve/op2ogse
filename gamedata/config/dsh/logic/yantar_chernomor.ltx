; Черномор на Янтаре

[logic]
active = walker
on_death = death
combat_ignore = combat_ignore

[walker]
path_walk = chernomor_norma_walk
path_look = chernomor_norma_look
meet = meet
danger = danger_ignore
on_info = {+dovel_chernomora_done} kamp
combat_ignore_cond = {=fighting_dist_ge(10)} always

[kamp]
center_point = yantar_chernomor_camp_center
path_walk = yantar_chernomor_camp_center_task
radius = 2.5
meet = meet
danger = danger_ignore
combat_ignore_cond = {=fighting_dist_ge(20)} always

[danger_ignore]
ignore_distance = 0

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

[death]
on_info = %+chernomor_umer%
