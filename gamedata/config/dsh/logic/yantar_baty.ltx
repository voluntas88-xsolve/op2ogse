; Батя на Янтаре

[logic]
active = walker
combat_ignore = combat_ignore
on_death = death
on_hit = hit

[walker]
path_walk = yantar_baty_walk
path_look = yantar_baty_look
danger = danger_ignore
meet = meet
on_info = {+baty_zadanie_start} walker1
combat_ignore_cond = {+minigan_proval} never, {=fighting_actor} always, {=fighting_dist_ge(15)} always

[walker1]
path_walk = yantar1_baty1_walk
path_look = yantar1_baty1_look
meet = no_meet
combat_ignore_cond = {+minigan_proval} never, {=fighting_actor} always, {=fighting_dist_ge(15)} always

[danger_ignore]
ignore_distance = 0

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

[death]
on_info = {=killed_by_actor} %+minigan_proval%

[hit]
on_info = {=hit_by_actor} %+minigan_proval%
