;
; Болотный Доктор в подземке Агропрома

[logic]
active = remark@idle
combat_ignore = combat_ignore

[remark@idle]
anim = wait
on_info = {+agr_doc_wakeup} remark@anim
combat_ignore_cond = always
meet = no_meet

[remark@anim]
anim = doctor_wakeup
target = actor
combat_ignore_cond = always
on_signal = anim_end | %-agr_doc_wakeup%
meet = no_meet
