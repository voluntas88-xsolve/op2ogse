; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Отец Пантеры

[logic]
active = walker
combat_ignore = combat_ignore
danger = danger_ignore

[walker]
path_walk = esc_father_pant_walk
path_look = esc_father_pant_look
on_info = {+father_esc_dialog_start} walker1
meet = meet
combat_ignore_cond = {=fighting_dist_ge(15)} always

[walker1]
path_walk = esc1_father1_pant1_walk
path_look = esc1_father1_pant1_look
on_info = {+esc_pantera_bomba_spawn} walker2 %+esc_pantera_stop_sms =dsh_story_agro_final.on_spawn%
meet = meet
combat_ignore_cond = always

[walker2]
path_walk = esc2_father2_pant2_walk
path_look = esc2_father2_pant2_look
on_info = {+pantera_umerla} walker3 
meet = no_meet
combat_ignore_cond = always

[walker3]
path_walk = esc3_father3_pant3_walk
path_look = esc3_father3_pant3_look
on_info = {+remark_otez} remark
meet = no_meet 
combat_ignore_cond = always

[remark]
anim = psycho_pain
meet = no_meet
wounded = wounded
on_info = {+remark_otez_die} remark@die
;on_timer = 25000 | remark@die
combat_ignore_cond = always

[remark@die]
no_move = true
no_rotate = true
anim = suicide
snd = val_suicide_before_death
snd_anim_sync = true
hp_victim = 0|nil
hp_cover = 1|false
hp_fight = 1|false
help_dialog = nil
on_info = {+camp_camp_otez} kamp
meet = no_meet
combat_ignore_cond = always

[kamp]
center_point  = esc_father_pant_camp_center
path_walk = esc_father_pant_camp_center_task
radius = 0.2
meet = meet
combat_ignore_cond = {=fighting_dist_ge(15)} always

[wounded]
hp_state = 0|help_me@help
hp_state_see = 0|wounded@help_see
hp_victim = 0|nil
hp_fight = 0|false
hp_cover = 0|false

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

[danger_ignore]
ignore_distance = 0
