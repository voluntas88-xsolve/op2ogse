; Андерсен на Генераторах

[logic]
active = walker
combat_ignore = combat_ignore

[walker]
path_walk = andersen_walk
path_look = andersen_look
combat_ignore_cond = {=fighting_dist_ge(10)}
danger = danger_ignore
meet = meet
on_info = {+andersen_vstrecha_start} remark@wait

[remark@wait]
anim = psycho_pain
on_timer = 20000 | walker1
combat_ignore_cond = always
meet = meet
wounded = wounded

[wounded]
hp_state = 0|help_me@help
hp_state_see = 0|wounded@help_see
hp_victim = 0|nil
hp_fight = 0|false
hp_cover = 0|false

[walker1]
path_walk = andersen_walk
path_look = andersen_look
combat_ignore_cond = {=fighting_dist_ge(10)}
danger = danger_ignore
meet = meet
on_info = {+ch_dok_proval_start} kamp

[kamp]
center_point  = generators_monolit_camp_center
path_walk = generators_monolit_camp_center_task
meet = meet
combat_ignore_cond = {=fighting_dist_ge(10)}
danger = danger_ignore
radius = 2.2

[danger_ignore]
ignore_distance = 3

[meet]
use = true
use_wpn = true
meet_talk_enabled = true
