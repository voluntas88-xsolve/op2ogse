;
; СМС обмен с отцом Пантеры на АС

[logic]
active = sr_idle

[sr_idle]
on_info = {+father_after_deaf_done} sr_idle@time
single = true

[sr_idle@time]
on_timer = 15000 | sr_idle@time1 %=arhara_dialog.dell_stalk_shuher =arhara_dialog.sms_otez_poreshil%
single = true

[sr_idle@time1]
on_timer = 8000 | sr_idle@time2 %=arhara_dialog.sms_otez_poreshil1%
single = true

[sr_idle@time2]
on_timer = 8000 | sr_idle@time3 %=arhara_dialog.sms_otez_poreshil2%
single = true

[sr_idle@time3]
on_timer = 22000 | sr_idle@time4 %=arhara_dialog.sms_otez_poreshil3%
single = true

[sr_idle@time4]
on_timer = 9000 | sr_idle@time5 %=arhara_dialog.sms_otez_poreshil4%
single = true

[sr_idle@time5]
on_timer = 1000 | nil %=dsh.sms_otez_pantera_alive_run%
single = true

[sr_idle@nil]
