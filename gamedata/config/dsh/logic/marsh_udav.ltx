; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Боцман на Болотах

[logic]
active = kamp
combat_ignore = combat_ignore
on_death = death@marsh_udav

[kamp]
center_point  = marsh_udav_camp_center
path_walk = marsh_udav_camp_center_task
radius = 0.2
meet = meet@marsh_udav
danger = danger_ignore
on_info = {+udav_vstrecha_start} kamp1

[kamp1]
center_point  = marsh1_udav1_camp_center
path_walk = marsh1_udav1_camp_center_task
radius = 1.0
meet = meet@marsh_udav
danger = danger_ignore
on_info = {+udav_vstrecha_poshli_start} karavan

[karavan]
close_dist = 3
near_dist = 7
faraway_dist = 40
close_state = guard
near_state = patrol
faraway_state = rush
wait_state = hide 
look_on_actor = false
no_loot = true 
radius = 1
on_info = {+udav_prytsy} walker
combat_ignore_cond = {=fighting_dist_ge(20)} always
meet = meet

[walker]
path_walk = marsh_udav_walk
path_look = marsh_udav_look
danger = danger_ignore
meet = meet
on_info = {+kladb_boloto_vert_sel} walker1  %=arhara_dialog.udav_v_vert_sms%

[walker1]
path_walk = marsh1_udav1_walk
path_look = marsh1_udav1_look
danger = danger_ignore

[danger_ignore]
ignore_distance = 0

[meet@marsh_udav]
use = true
use_wpn = true
meet_state = 3|sit
victim = 3|actor
victim_wpn = 3|actor

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

[death@marsh_udav]
on_info = %+qwest_marsh_udav_proval =arhara_dialog.marsh_udav_pogib =arhara_dialog.dell_marsh_heli_dok%
