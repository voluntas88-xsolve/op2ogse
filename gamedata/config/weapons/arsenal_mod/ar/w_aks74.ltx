cam_dispersion_inc			= 0.15		;увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac			= 0.25		;ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle				= 5.0	    	;максимальный угол отдачи
cam_max_angle_horz			= 6.0		;(degree) maximum shot horizontal degree 
cam_step_angle_horz			= 0.45 ;1		;(degree) size of step camera moved in horizontal position while shooting

misfire_probability 		      = 0.00025	;вероятность осечки при максимальном износе 
